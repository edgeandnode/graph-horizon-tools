{
  "name": "@graphprotocol/graph-horizon-tools",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "license": "MIT",
  "description": "Collection of tools for debugging and working with Graph Horizon protocol",
  "repository": {
    "type": "git",
    "url": "https://github.com/thegraph/graph-horizon-tools"
  },
  "scripts": {
    "build": "pnpm --filter \"./packages/*\" build",
    "clean": "pnpm --filter \"./packages/*\" clean",
    "check": "pnpm --filter \"./packages/*\" check",
    "lint": "eslint \"**/{src,test,examples,scripts,dtslint}/**/*.{ts,mjs}\"",
    "lint-fix": "pnpm lint --fix",
    "test": "pnpm --filter \"./packages/*\" test",
    "coverage": "pnpm --filter \"./packages/*\" coverage"
  },
  "devDependencies": {
    "@effect/eslint-plugin": "^0.3.2",
    "@effect/language-service": "latest",
    "@eslint/compat": "1.1.1",
    "@eslint/eslintrc": "3.1.0",
    "@eslint/js": "9.10.0",
    "@typescript-eslint/eslint-plugin": "^8.4.0",
    "@typescript-eslint/parser": "^8.4.0",
    "eslint": "^9.10.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-codegen": "0.28.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  }
}
